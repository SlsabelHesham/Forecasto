<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/main_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:elevation="15dp"
        android:fontFamily="@font/aleo"
        android:gravity="start"
        android:paddingStart="25dp"
        android:text="Weather Alarm"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <TextView
        android:id="@+id/weatherConditionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:elevation="15dp"
        android:fontFamily="@font/aleo"
        android:gravity="start"
        android:lineSpacingExtra="10sp"
        android:paddingStart="25dp"
        android:text="Alexandria\n1/4/2024  2:52AM\nClouds!\nLigh Rain"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/headerTV"
        app:layout_constraintStart_toStartOf="@+id/headerTV"
        app:layout_constraintTop_toBottomOf="@+id/headerTV" />

    <ImageView
        android:id="@+id/weekIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="-35dp"
        android:layout_marginEnd="25dp"
        android:elevation="15dp"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:srcCompat="@drawable/alarm" />

    <Button
        android:id="@+id/stopBtn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:elevation="15dp"
        android:fontFamily="@font/aleo"
        android:text="Stop"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="@color/button"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="@+id/weatherConditionTV"
        app:layout_constraintStart_toStartOf="@+id/weatherConditionTV"
        app:layout_constraintTop_toBottomOf="@+id/weatherConditionTV" />

</androidx.constraintlayout.widget.ConstraintLayout>
